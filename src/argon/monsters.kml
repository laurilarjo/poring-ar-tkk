<?xml version="1.0" encoding="UTF-8"?>
<kml xmlns="http://www.opengis.net/kml/2.2" xmlns:gx="http://www.google.com/kml/ext/2.2" xmlns:kml="http://www.opengis.net/kml/2.2" xmlns:atom="http://www.w3.org/2005/Atom">
<Document>

	<Style id="undecorated_style">
		<BalloonStyle>
			<displayMode>undecorated</displayMode> <!-- no styling applied to balloon -->
		</BalloonStyle>
	</Style>
	
	<Placemark id="poring_object">
        <name>Poring</name>
        <description><![CDATA[
        <script language="text/javascript">
			function Monster() {
				this.id = 0;
        	}
        	
        	Monster.prototype = new Creature(100, 20, "Poring");
        	
			function poring_object_init() {
				this.poring = new Monster();
				
				$('#poring_image_div').bind('click', function(event) { 
					event.stopPropagation(); 
					//$('#bottombar').show();
					$('#poring_title').hide();
					//alert(getRunningEngine());
					getRunningEngine().setCurrentMonster(poring);
					alert(poring.currentHP);
					removeHP(poring, 10);
				});			
			}
			
			function removeHP(target, amount) {
				target.currentHP -= amount;
				var newAmount = target.currentHP * 1.2 - 120;
				newAmount = newAmount + "px 0";		
				if (target.currentHP <= 0)	{
					target.currentHP = 0;
					$('#monster-hp').css("background-position", "-120px 0");
				}
				else {
					$('#monster-hp').css("background-position", newAmount);
				}
			}
		</script>
        	
        <div id="poring_title">Poring</div>
        <div><img id="monster-hp" src="../images/percentimage.png" 
				    alt="9.5%" 
				    class="percentImage"  /></div>
        <div id="poring_image_div"><img src="../images/poring_alive.gif"/></div>
        <div>
        		
        </div>
        ]]></description>
        <balloonVisibility>1</balloonVisibility>
        <Balloon>
			<locationMode>relative</locationMode>
			<location>
            	<latitude units="meters">5.0</latitude> <!-- This will be generated by server -->
                <longitude units="meters">-5.0</longitude> <!-- This will be generated by server -->
                <altitude>0.0</altitude>
			</location>
			<orientationMode>billboard</orientationMode>
			<orientation>
				<heading>0.0</heading>
				<tilt>0.0</tilt>
				<roll>0.0</roll>
			</orientation>
        </Balloon>
        <styleUrl>#undecorated_style</styleUrl> <!-- reference to style element -->
	</Placemark>

	<!-- KML document description -->
	<name>Monster file for Poring AR</name>
	<Snippet>Monster file for Poring AR</Snippet>
	<description>Monster file for Poring AR</description>        	
</Document>
</kml>
